<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Test COM6</title>
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <h1>ข้อมูลที่รับจาก COM6</h1>

  <table border="1" style="margin-top: 10px; width: 100%; text-align: center;">
    <thead>
      <tr>
        <th>ข้อมูลจาก COM6</th>
      </tr>
    </thead>
    <tbody id="dataTableBody">
      <!-- ข้อมูลแบบเรียลไทม์จะแสดงที่นี่ -->
    </tbody>
  </table>

  <script>
    const socket = io();
    const dataTableBody = document.getElementById('dataTableBody');

    // ฟัง event 'com6Data' จาก server มาแสดงในตารางทันที
    socket.on('com6Data', (data) => {
      const tr = document.createElement('tr');
      const td = document.createElement('td');
      td.textContent = data;
      tr.appendChild(td);
      dataTableBody.prepend(tr); // เพิ่มข้อมูลใหม่ที่ด้านบน
    });
  </script>
</body>
</html>
