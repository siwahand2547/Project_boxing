<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>สร้างการแข่งขัน</title>
  <style>
    body { font-family: Arial; background: #121212; color: #eee; padding: 20px; }
    label { display: block; margin-top: 10px; }
    select, input { width: 200px; padding: 5px; margin-top: 5px; }
    button { margin-top: 15px; padding: 10px 20px; background: #333; color: white; border: none; cursor: pointer; }
    button:disabled { background: #555; cursor: not-allowed; }
    .status { margin-top: 10px; }
    .connected { color: #0f0; }
    .disconnected { color: #f00; }
  </style>
</head>
<body>

<h1>สร้างการแข่งขันใหม่</h1>

<div class="status">
  COM4: <span id="statusCOM4" class="disconnected">ยังไม่เชื่อมต่อ</span><br />
  COM5: <span id="statusCOM5" class="disconnected">ยังไม่เชื่อมต่อ</span>
</div>

<form id="matchForm" method="POST" action="/match/create">
  <label for="fight_date">วันที่แข่งขัน:</label>
  <input type="date" name="fight_date" required>

  <label for="fighter1">เลือกนักชกคนที่ 1:</label>
  <select id="fighter1" name="fighter1_id" required>
    <% fighters.forEach(f => { %>
      <option value="<%= f.id %>"><%= f.name %></option>
    <% }) %>
  </select>

  <label for="fighter2">เลือกนักชกคนที่ 2:</label>
  <select id="fighter2" name="fighter2_id" required>
    <% fighters.forEach(f => { %>
      <option value="<%= f.id %>"><%= f.name %></option>
    <% }) %>
  </select>

  <button type="submit" id="createMatchBtn" disabled>สร้างการแข่งขัน</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();
  let isCOM4Connected = false;
  let isCOM5Connected = false;

  function updateStatus() {
    document.getElementById('statusCOM4').textContent = isCOM4Connected ? 'เชื่อมต่อแล้ว' : 'ยังไม่เชื่อมต่อ';
    document.getElementById('statusCOM4').className = isCOM4Connected ? 'connected' : 'disconnected';
    document.getElementById('statusCOM5').textContent = isCOM5Connected ? 'เชื่อมต่อแล้ว' : 'ยังไม่เชื่อมต่อ';
    document.getElementById('statusCOM5').className = isCOM5Connected ? 'connected' : 'disconnected';
    document.getElementById('createMatchBtn').disabled = !(isCOM4Connected && isCOM5Connected);
  }

  socket.on('connectionStatus', status => {
    isCOM4Connected = status.com4;
    isCOM5Connected = status.com5;
    updateStatus();
  });
</script>

</body>
</html>
